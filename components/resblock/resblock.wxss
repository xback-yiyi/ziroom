/* components/resblock/resblock.wxss */
.title{
  color: #444;
  margin: 48rpx 0 64rpx;
  font-size: 36rpx;
}
.banner{
  width: 100%;
  height: 500rpx;
}
.res-name{
  padding: 48rpx 36rpx 52rpx;
}
.res-title{
  font-size: 44rpx;
  color: #444;
  font-weight: bold;
  margin-bottom: 14rpx;
}
.res-location{
  font-size: 28rpx;
  color: #666;
  height: 28rpx;
}
.res-wrap{
  padding:48rpx 36rpx;
}
.list-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 114rpx;
  color: #666;
  font-size: 28rpx;
}
.button{
  /* width: 678rpx; */
  height: 96rpx;
  line-height: 96rpx;
  color: #999;
  border: 1px solid #ddd;
  text-align: center;
  font-size: 28rpx;
}
.sub-wrap{
  padding: 48rpx 36rpx;
}
.sub-list{
  font-size: 28rpx;
  color: #444;
  margin-bottom: 48rpx;
}

.res-more{
  display: block;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  padding: 17rpx 20rpx 0 20rpx;
}
.more-title{
  margin: 0 0 20rpx;
  font-size: 48rpx;
  color: #444;
}
.res-none{
  display: none;
}
.more-item{
  padding:44rpx 0 0;
  font-size: 24rpx;
  color:  #000; 
  height: 148rpx;
  border-bottom: 1rpx solid #eee;
}
.more-item .item-title{
  color: #444;
  font-size: 32rpx;
  margin: 0 0 24rpx;
}
.cancel{
  width: 48rpx;
  height: 48rpx;
  font-size: 48rpx;
  line-height: 48rpx;
  margin-bottom: 66rpx;
}